<div id="profile">
  <%= image_tag @hackstar.image.url :thumb %>
  <h1><%= @hackstar.name %></h1>
  <div class="twitter"><%= link_to '@'+@hackstar.twitter, "http://www.twitter.com/#{@hackstar.twitter}", target:"_blank" %></div>
  
  <div id="info">
	
  	<h2>Skills:</h2>
		<% @hackstar.hackstar_skills.each do |hackstar_skill| %>
		<span class="label notice">
		<%= hackstar_skill.skill.name %>
			<% if hackstar_skill.love? %> 
				&nbsp;<span style="font-size:120%; color:#ff9898;">â™¥</span>
			<% end %>
		</span>&nbsp;
		<% end %>
		
		<br /><br />
		
  	<h2>About:</h2>
  	<p><%=raw Maruku.new(@hackstar.profile).to_html %></p>
  </div>
</div>
